<mvc:View controllerName="logaligroup.employees.controller.View1"
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true"
          xmlns="sap.m"
          xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <HBox id="idHBox1" >
                <Label id="idLabelEmployee" labelFor="idInputEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin">
                </Label>
                <Input id="idInputEmployee" value="{/employeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd" liveChange="onChangeEmployee">
                </Input> 
                <Label id="idLabelCountry" labelFor="idSelCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" visible="false">
                </Label>
                <Select id="idSelCountry" selectedKey="{/countryKey}" forceSelection="false" items="{/listCountry}" visible="false">
                    <items>
                        <core:Item key="key" text="{text}"></core:Item>
                    </items>
                </Select>
           </HBox>
        </content>
    </Page>
</mvc:View>
