<mvc:View
	controllerName="logaligroup.project1.controller.InvoicesList"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
<Panel accessibleRole="Region">
  <headerToolbar>
    <Toolbar>
      <Title text="{i18n>InvoicesTitleList}"></Title>
      <ToolbarSpacer ></ToolbarSpacer>
      <SearchField width="50%" search="invoicesSearch" placeholder="{i18n>searchFieldPlaceHolder}"></SearchField>
    </Toolbar>
  </headerToolbar>

<Table id="idInvoicesList" 
   headerText="{i18n>InvoicesTitleList}" 
   class="sapUiResponsiveMargin" 
   width="auto" 
   items="{path:'invoices>/Invoices',
           sorter:{path: 'invoices>ShipperName',
           group : true} }">
  

  <columns>
    <Column hAlign="End" minScreenWidth="Small" demandPopin="true" width="5em">
      <Text text="{i18n>columnQuantity}"></Text>
    </Column>
    <Column >
      <Text text="{i18n>columnProductName}"></Text>
    </Column>
    <Column  minScreenWidth="Tablet">
      <Text text="{i18n>columnShipperName}"></Text>
    </Column>
    <Column minScreenWidth="Tablet">
      <Text text="{i18n>columnShippedDate}"></Text>
    </Column>
    <Column minScreenWidth="Small" demandPopin="true">
      <Text text="{i18n>columnStatus}"></Text>
    </Column>
       <Column hAlign="End">
      <Text text="{i18n>columnExtendedPrice}"></Text>
    </Column>
  </columns>

  
  
  <items>
<ColumnListItem type="Navigation"
                press="navigationToDetails">
                <cells>
                  <ObjectNumber number="{invoices>Quantity}" emphasized="false"></ObjectNumber>
                  <ObjectIdentifier title="{invoices>ProductName}"></ObjectIdentifier>
                  <Text text="{invoices>ShipperName}"></Text>
                  <Text text="{invoices>ShipperName}"></Text>
                  <Text text="{ path:'invoices>Status',
                             formatter: '.formatter1.invoiceStatus'}"
                                  >
                 </Text>
                 <ObjectNumber number="{ parts :[{path:'invoices>ExtendedPrice'},
                                       {path:'currency>/usd'}],
                              type:'sap.ui.model.type.Currency',
                              formatOptions:{
                                showMeasure:false
                              }
                    }" unit="{currency>/usd}"
                       state="{= ${invoices>ExtendedPrice} > 50 ? 'Success':'Error' }"></ObjectNumber>
                </cells>
</ColumnListItem>

  </items>
</Table>
</Panel>
</mvc:View>