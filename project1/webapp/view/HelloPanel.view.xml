<mvc:View
	controllerName="logaligroup.project1.controller.HelloPanel"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>

		   <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto"
		          expandable="{divice>/system/phone}"
				  expanded="{= !${divice>/system/phone}}">
		        <content>
				<Button id="idSayHelloDialogButton" 
				       icon="sap-icon://search" 
				       text="{i18n>HelloDialog}" press="onOpenDialog" 
					   class="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop"></Button>
					<Button text="{i18n>showHelloButton}" press=".onPresiono" class="sapUiSmallMarginEnd sapUiHideOnDesktop"></Button>
                    <Input value="{/recipient/name}"
                           valueLiveUpdate="true"
                           width="60%"></Input>

					<Text
						text="Ver {/recipient/name}"
                        class="sapUiSmallMargin boldElement sapthemeHighlight-asColor"
					></Text>

					<core:Fragment fragmentName="logaligroup.project1.view.Form1" type="XML"></core:Fragment>
                         
                </content>
		   </Panel>
</mvc:View>