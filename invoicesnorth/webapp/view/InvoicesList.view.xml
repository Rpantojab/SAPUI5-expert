<mvc:View
	controllerName="logaligroup.invoicesnorth.controller.InvoicesList"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
<List id="idInvoicesList" 
   headerText="{i18n>InvoicesTitleList}" 
   class="sapUiResponsiveMargin" 
   width="auto" 
   items="{path:'northwind>/Invoices',
           sorter:{path: 'northwind>ShipperName',
           group : true} }">
  <headerToolbar>
    <Toolbar>
      <Title text="{i18n>InvoicesTitleList}"></Title>
      <ToolbarSpacer ></ToolbarSpacer>
      <SearchField width="50%" search="invoicesSearch"></SearchField>
    </Toolbar>
  </headerToolbar>
  
  <items>
    <ObjectListItem title="{northwind>Quantity} x {northwind>ProductName}"
                    number="{ parts :[{path:'northwind>ExtendedPrice'},
                                       {path:'currency>/usd'}],
                              type:'sap.ui.model.type.Currency',
                              formatOptions:{
                                showMeasure:false
                              }
                    }"
                    numberUnit="{currency>/usd}"
                    numberState="{= ${northwind>ExtendedPrice} > 50 ? 'Success':'Error' }"
                 >

                 </ObjectListItem>
  </items>
</List>
</mvc:View>